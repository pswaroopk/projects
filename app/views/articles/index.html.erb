

<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path, class:"big button" %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr class="list">
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class:"small button" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class:"small button" %></td>
      <td><%= link_to 'Destroy', article_path(article), class:"small button",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
              <td><%= image_tag (article.id),size:"50"%></td>
    </tr>
  <% end %>
</table>
